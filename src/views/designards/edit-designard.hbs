<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>EDITAR DESIGNACION DE DOCENTE</h3>
        </div>
        <div class="car-body">
            <form action="/designards/edit/{{designard._id}}?_method=PUT" method="POST">
               <input type="hidden" name="_method" value="PUT">
               <div class="form-group">
                    <input type="text" name="iddocente" class="form-control" value="{{designard.iddocente}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="idmateria" class="form-control" value="{{designard.idmateria}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="registro" class="form-control" value="{{designard.registro}}" >
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>