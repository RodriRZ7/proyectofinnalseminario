<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>EDITAR AULA</h3>
        </div>
        <div class="car-body">
            <form action="/aulas/edit/{{aula._id}}?_method=PUT" method="POST">
               <input type="hidden" name="_method" value="PUT">
               <div class="form-group">
                    <input type="text" name="numerodeaula" class="form-control" value="{{aula.numerodeaula}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="piso" class="form-control" value="{{aula.piso}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="capacidadaula" class="form-control" value="{{aula.capacidadaula}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="id" class="form-control" value="{{aula.id}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>