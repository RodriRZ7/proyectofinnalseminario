<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            Registro Nuevo Usuario
        </div>
        <div class="card-body">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="confirm_password" placeholder="Confirme su Password" value="{{confirm_password}}">
                </div>
                <button class="btn btn-primary btn-block">
                    Registrarse
                </button>
            </form>
        </div>
    </div>
</div>