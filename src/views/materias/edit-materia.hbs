<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>EDITAR MATERIA</h3>
        </div>
        <div class="car-body">
            <form action="/materias/edit/{{materia._id}}?_method=PUT" method="POST">
               <input type="hidden" name="_method" value="PUT">
               <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{materia.nombre}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="sigla" class="form-control" value="{{materia.sigla}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="horasporsemana" class="form-control" value="{{materia.horasporsemana}}" >
                </div>
                <div class="form-group">
                    <input type="text" name="cargahoraria" class="form-control" value="{{materia.cargahoraria}}">
                </div>
                <div class="form-group">
                    <input type="text" name="semestre" class="form-control" value="{{materia.semestre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="id" class="form-control" value="{{materia.id}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>